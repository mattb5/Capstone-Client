{{#each matches}}

  {{#if opponent}}
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title">Match Time: {{time}}</h3>
      </div>

  {{else}}
    <div class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title">Match Time: {{time}}</h3>
      </div>
  {{/if}}

      <div class="panel-body">
        <p> Match Host:  {{hostUser}} </p>
        <p> Opponent: {{opponent}} </p>
        <form id="patch-match-time">
          <fieldset>
            <legend>Update Match Time </legend>
            <!-- <input type ="text" id="update-match-time" placeholder="Update Match Time"> -->
            <input type ="text" class="update-match-time" placeholder="Update Match Time">
            <input type="submit" name="submit" value="Update Opponent!" class='updateMatchTimeButtons' data-match-id='{{_id}}' data-match-opponent-id='{{opponent}}' data-match-owner-id='{{_owner}}'>
          </fieldset>
        </form>
        <br></br>
        <!-- <button class='updateMatchTimeButtons' data-match-id='{{_id}}' data-match-opponent-id='{{opponent}}' data-match-owner-id='{{_owner}}'>Update</button> -->
        <button class='deleteButtons' data-match-id='{{_id}}' data-match-opponent-id='{{opponent}}' data-match-owner-id='{{_owner}}'>Delete Match</button>
      </div>

    </div>



{{/each}}
